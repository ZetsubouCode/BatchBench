# Flask basic config
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=dev-secret-change-me

# App display name
APP_NAME=BatchBench

# Working directory (defaults to ./_work if not set)
WORK_DIR=

# Optional path hardening for folder browsing/open-path APIs
# 0 = unrestricted local browsing (default), 1 = restrict to BROWSE_ALLOWED_ROOTS
BROWSE_STRICT_MODE=0
# Comma/semicolon/newline separated list of allowed roots when strict mode is on
BROWSE_ALLOWED_ROOTS=

# Hugging Face Hub cache: set to 1 to silence symlink warning on Windows
HF_HUB_DISABLE_SYMLINKS_WARNING=1

# Danbooru proxy (optional)
DANBOORU_BASE_URL=https://danbooru.donmai.us
DANBOORU_TIMEOUT_SECONDS=3
DANBOORU_CACHE_TTL_SECONDS=86400
DANBOORU_CACHE_MAX_ENTRIES=300
DANBOORU_PREVIEW_LIMIT=8
DANBOORU_LOGIN=
DANBOORU_API_KEY=
